from web3 import Web3
import json
import random
import time

# Conectare la nodul Ethereum (Ganache)
web3 = Web3(Web3.HTTPProvider('http://127.0.0.1:8545'))

# Adresa contractului și ABI-ul
contract_address = 'YOUR_CONTRACT_ADDRESS'
abi = json.loads('ABI_OF_YOUR_CONTRACT')

# Conectare la contract
contract = web3.eth.contract(address=contract_address, abi=abi)
account = web3.eth.accounts[0]

def simulate_data():
    return {
        'temperature': random.randint(5, 40),
        'humidity': random.randint(30, 60)
    }

def backup_data():
    data = simulate_data()
    tx = contract.functions.addData(data['temperature'], data['humidity']).buildTransaction({
        'from': account,
        'nonce': web3.eth.getTransactionCount(account),
        'gas': 2000000,
        'gasPrice': web3.toWei('50', 'gwei')
    })
    signed_tx = web3.eth.account.sign_transaction(tx, private_key='YOUR_PRIVATE_KEY')
    tx_hash = web3.eth.sendRawTransaction(signed_tx.rawTransaction)
    print(f'Transaction sent with hash: {web3.toHex(tx_hash)}')

# Rulează backup-ul periodic
while True:
    backup_data()
    time.sleep(3600)  # Rulează backup-ul la fiecare oră
